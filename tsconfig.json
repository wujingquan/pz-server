{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["ESNext"],
    "paths": {
      /*定义别名*/ "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
